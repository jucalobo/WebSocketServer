CREATE TABLE `ControlRecibido` (
  `idControlRecibido` int(11) NOT NULL AUTO_INCREMENT,
  `idDeviceCode` text,
  `HoraRecibido` datetime DEFAULT CURRENT_TIMESTAMP,
  `ID_Seq` int(11) DEFAULT NULL,
  PRIMARY KEY (`idControlRecibido`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

CREATE TABLE `InfoRecibidos` (
  `idInfoRecibidos` int(11) NOT NULL AUTO_INCREMENT,
  `FechaRecepcion` timestamp NULL DEFAULT CURRENT_TIMESTAMP,
  `FechaDispositivo` datetime DEFAULT NULL,
  `idDeviceCode` text,
  `NombrePersona` text,
  `Temperatura` decimal(10,2) DEFAULT NULL,
  `isMascara` tinyint(4) DEFAULT NULL,
  `idPersona` bigint(20) DEFAULT NULL,
  `CardID` bigint(20) DEFAULT NULL,
  `Foto` text,
  `Gender` tinyint(4) DEFAULT NULL,
  `ID_Seq` int(11) DEFAULT '0',
  PRIMARY KEY (`idInfoRecibidos`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

CREATE TABLE `ParametrosGenerales` (
  `idParametrosGenerales` int(11) NOT NULL AUTO_INCREMENT,
  `Parametro` varchar(45) DEFAULT NULL,
  `Valor` decimal(11,2) DEFAULT NULL,
  `Observacion` longtext,
  `DescripcionParametro` text,
  `Publico` tinyint(4) DEFAULT NULL,
  PRIMARY KEY (`idParametrosGenerales`)
) ENGINE=InnoDB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;

